ScreenManager:
    HomeScreen:
        id:home
        name:'home'

<HomeScreen>:
    FloatLayout:
        Label:
            text:'Your Random meal for today'
            font_size:20
            pos_hint:{'top':1}
            size_hint:1,.1
            color:0,0,0,1
        AsyncImage:
            source: app.image
            pos_hint:{'top':.85}
            size_hint:1,.5
        Label:
            text:app.name
            font_size:20
            pos_hint:{'top':.35}
            size_hint:1,.1
            color:0,0,0,1
        Label:
            text:app.category
            font_size:20
            pos_hint:{'top':.3,'left':1}
            size_hint:.3,.1
            color:0,0,0,1
        MDRaisedButton:
            pos_hint:{'top':.27,'right':.7}
            size_hint:.3,.05
            text:'View'
            on_release:
                app.view()
        Label:
            text:app.area
            font_size:20
            pos_hint:{'top':.3,'right':1}
            size_hint:.3,.1
            color:0,0,0,1
        Label:
            text: 'Ingredients'
            font_size:20
            pos_hint:{'top':.23,'right':1}
            size_hint:1,.1
            color:0,0,0,1
        ScrollView:
            pos_hint:{'top':.15,'left':1}
            size_hint:1,.15
            GridLayout:
                id: ingredient_list
                cols:1
                size_hint_y: None
                height: self.minimum_height
                row_default_height:'50dp'
                row_force_default: True
